from IPython.display import HTML, display

# Run this cell to launch the game (it appears below).
display(HTML(r'''
<div style="font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial; max-width: 920px;">
  <h2 style="margin: 0 0 8px 0;">Tower Defense</h2>
  <div style="display:flex; gap:12px; align-items:center; flex-wrap:wrap; margin-bottom:10px;">
    <button id="td_start" style="padding:8px 12px; border-radius:10px; border:1px solid #ccc; background:#fff; cursor:pointer;">Start Wave</button>
    <button id="td_pause" style="padding:8px 12px; border-radius:10px; border:1px solid #ccc; background:#fff; cursor:pointer;">Pause</button>
    <span id="td_status" style="padding:6px 10px; border-radius:999px; border:1px solid #ddd; background:#fafafa;">Ready</span>
  </div>

  <div style="display:flex; gap:14px; flex-wrap:wrap;">
    <canvas id="td_canvas" width="860" height="520" style="border:1px solid #ddd; border-radius:14px; background:#ffffff;"></canvas>
    <div style="min-width: 260px; border:1px solid #eee; border-radius:14px; padding:12px; background:#fafafa;">
      <div style="font-weight:700; margin-bottom:6px;">Stats</div>
      <div id="td_stats" style="line-height:1.55;"></div>
      <hr style="border:none; border-top:1px solid #e6e6e6; margin:10px 0;">
      <div style="font-weight:700; margin-bottom:6px;">How to play</div>
      <ul style="margin:0; padding-left:18px; line-height:1.55;">
        <li>Click empty grass to place a tower (50).</li>
        <li>Don’t place on the path.</li>
        <li>Start Wave to spawn enemies.</li>
        <li>Earn money by defeating enemies.</li>
      </ul>
      <div style="margin-top:10px; font-size:12.5px; color:#555;">
        Tip: Place towers near turns for more time-on-target.
      </div>
    </div>
  </div>
</div>

<script>
(() => {
  // ---- Canvas + basic helpers ----
  const canvas = document.getElementById("td_canvas");
  const ctx = canvas.getContext("2d");
  const statusEl = document.getElementById("td_status");
  const statsEl = document.getElementById("td_stats");
  const btnStart = document.getElementById("td_start");
  const btnPause = document.getElementById("td_pause");

  // Avoid double-running if cell executed multiple times (common in notebooks)
  // Create a unique key on window.
  const RUN_KEY = "__TD_NOTEBOOK_GAME_RUNNING__";
  if (window[RUN_KEY]) {
    statusEl.textContent = "Already running (reloaded)";
    try { window[RUN_KEY].stop(); } catch(e) {}
  }

  // ---- Game parameters ----
  const W = canvas.width, H = canvas.height;
  const grid = 40;                     // purely visual
  const pathWidth = 46;

  let money = 150;
  let lives = 20;
  let wave = 0;
  let running = true;

  // Towers
  const towerCost = 50;
  const towers = []; // {x,y,range,rate,cd,damage}

  // Enemies + bullets
  const enemies = []; // {hp, maxHp, speed, t, seg, x, y, r, reward}
  const bullets = []; // {x,y,vx,vy,life,damage}

  // Path as polyline points
  const path = [
    {x: 40,  y: 260},
    {x: 200, y: 260},
    {x: 200, y: 110},
    {x: 420, y: 110},
    {x: 420, y: 410},
    {x: 660, y: 410},
    {x: 660, y: 210},
    {x: 820, y: 210}
  ];

  function clamp(v, a, b){ return Math.max(a, Math.min(b, v)); }
  function dist(ax, ay, bx, by){ const dx=ax-bx, dy=ay-by; return Math.hypot(dx, dy); }

  function segLen(i){
    const a=path[i], b=path[i+1];
    return Math.hypot(b.x-a.x, b.y-a.y);
  }

  const segLens = [];
  for (let i=0;i<path.length-1;i++) segLens.push(segLen(i));

  // For "is point on path" checks: distance to segment <= pathWidth/2
  function pointToSegmentDistance(px, py, ax, ay, bx, by){
    const vx = bx-ax, vy = by-ay;
    const wx = px-ax, wy = py-ay;
    const c1 = vx*wx + vy*wy;
    if (c1 <= 0) return Math.hypot(px-ax, py-ay);
    const c2 = vx*vx + vy*vy;
    if (c2 <= c1) return Math.hypot(px-bx, py-by);
    const t = c1 / c2;
    const projx = ax + t*vx, projy = ay + t*vy;
    return Math.hypot(px-projx, py-projy);
  }

  function isOnPath(x, y){
    for (let i=0;i<path.length-1;i++){
      const a=path[i], b=path[i+1];
      const d = pointToSegmentDistance(x,y,a.x,a.y,b.x,b.y);
      if (d <= pathWidth/2) return true;
    }
    return false;
  }

  // ---- Wave spawner ----
  let spawnQueue = []; // array of {delay, hp, speed, reward}
  let spawnTimer = 0;

  function queueWave(){
    wave += 1;
    statusEl.textContent = `Wave ${wave} queued`;
    // Simple scaling
    const count = 10 + Math.floor(wave*2.5);
    const baseHp = 20 + wave*6;
    const baseSpeed = 55 + wave*2; // pixels/sec
    const reward = 8 + Math.floor(wave*0.6);

    spawnQueue = [];
    for (let i=0; i<count; i++){
      spawnQueue.push({
        delay: i * 0.55, // seconds between spawns
        hp: baseHp + Math.floor(i*0.6),
        speed: baseSpeed,
        reward: reward
      });
    }
    spawnTimer = 0;
  }

  function spawnEnemy(cfg){
    const p0 = path[0];
    enemies.push({
      hp: cfg.hp,
      maxHp: cfg.hp,
      speed: cfg.speed,
      seg: 0,
      t: 0, // 0..1 along current segment
      x: p0.x,
      y: p0.y,
      r: 12,
      reward: cfg.reward
    });
  }

  // ---- Input: place towers ----
  canvas.addEventListener("click", (ev) => {
    const rect = canvas.getBoundingClientRect();
    const x = ev.clientX - rect.left;
    const y = ev.clientY - rect.top;

    if (!running) return;

    // disallow on path
    if (isOnPath(x,y)){
      statusEl.textContent = "Can't place on the path";
      return;
    }

    // avoid placing too close to other towers
    for (const t of towers){
      if (dist(x,y,t.x,t.y) < 28){
        statusEl.textContent = "Too close to another tower";
        return;
      }
    }

    if (money < towerCost){
      statusEl.textContent = "Not enough money";
      return;
    }

    money -= towerCost;
    towers.push({
      x, y,
      range: 150,
      rate: 0.55,      // shots/sec (cooldown = 1/rate)
      cd: 0,
      damage: 10 + Math.floor(wave*0.25)
    });
    statusEl.textContent = "Tower placed";
  });

  btnStart.addEventListener("click", () => {
    if (spawnQueue.length > 0){
      statusEl.textContent = "Wave already in progress";
      return;
    }
    queueWave();
  });

  btnPause.addEventListener("click", () => {
    running = !running;
    btnPause.textContent = running ? "Pause" : "Resume";
    statusEl.textContent = running ? "Running" : "Paused";
  });

  // ---- Core simulation ----
  let last = performance.now();
  function step(now){
    const dt = Math.min(0.033, (now - last) / 1000); // cap dt
    last = now;

    if (running){
      update(dt);
      draw();
    } else {
      draw(); // still render for crispness
    }

    requestAnimationFrame(step);
  }

  function update(dt){
    // spawn handling
    if (spawnQueue.length){
      spawnTimer += dt;
      // spawn any whose delay has elapsed
      while (spawnQueue.length && spawnTimer >= spawnQueue[0].delay){
        const cfg = spawnQueue.shift();
        spawnEnemy(cfg);
      }
      if (!spawnQueue.length) statusEl.textContent = `Wave ${wave} spawning done`;
    }

    // enemies move along path
    for (let i = enemies.length - 1; i >= 0; i--){
      const e = enemies[i];
      let remaining = e.speed * dt;

      while (remaining > 0 && e.seg < path.length - 1){
        const a = path[e.seg], b = path[e.seg+1];
        const len = segLens[e.seg];
        const dx = b.x - a.x, dy = b.y - a.y;

        // e.t is fraction along segment
        const posDist = e.t * len;
        const canMove = len - posDist;
        const moveDist = Math.min(canMove, remaining);
        const newDist = posDist + moveDist;
        e.t = newDist / len;

        e.x = a.x + dx * e.t;
        e.y = a.y + dy * e.t;

        remaining -= moveDist;

        if (e.t >= 0.999999){
          e.seg += 1;
          e.t = 0;
        }
      }

      // reached end
      if (e.seg >= path.length - 1){
        enemies.splice(i, 1);
        lives -= 1;
        statusEl.textContent = "An enemy slipped through!";
        if (lives <= 0){
          lives = 0;
          running = false;
          statusEl.textContent = "Game Over (refresh cell to restart)";
        }
      }
    }

    // towers target + shoot
    for (const t of towers){
      if (t.cd > 0) t.cd -= dt;

      if (t.cd <= 0 && enemies.length){
        // find nearest in range
        let best = null;
        let bestD = 1e9;
        for (const e of enemies){
          const d = dist(t.x, t.y, e.x, e.y);
          if (d <= t.range && d < bestD){
            bestD = d;
            best = e;
          }
        }
        if (best){
          // shoot
          const d = bestD || 1;
          const spd = 520; // bullet speed px/sec
          const vx = (best.x - t.x) / d * spd;
          const vy = (best.y - t.y) / d * spd;
          bullets.push({x: t.x, y: t.y, vx, vy, life: 1.2, damage: t.damage});
          t.cd = 1 / t.rate;
        }
      }
    }

    // bullets move + collide
    for (let i = bullets.length - 1; i >= 0; i--){
      const b = bullets[i];
      b.x += b.vx * dt;
      b.y += b.vy * dt;
      b.life -= dt;

      let hitIndex = -1;
      for (let j = 0; j < enemies.length; j++){
        const e = enemies[j];
        if (dist(b.x,b.y,e.x,e.y) <= e.r){
          hitIndex = j;
          break;
        }
      }

      if (hitIndex >= 0){
        const e = enemies[hitIndex];
        e.hp -= b.damage;
        bullets.splice(i,1);

        if (e.hp <= 0){
          enemies.splice(hitIndex,1);
          money += e.reward;
          statusEl.textContent = `+${e.reward} money`;
        }
        continue;
      }

      if (b.life <= 0 || b.x < -20 || b.y < -20 || b.x > W+20 || b.y > H+20){
        bullets.splice(i,1);
      }
    }

    // update stats
    statsEl.innerHTML = `
      <div><b>Money:</b> ${money}</div>
      <div><b>Lives:</b> ${lives}</div>
      <div><b>Wave:</b> ${wave}</div>
      <div><b>Towers:</b> ${towers.length}</div>
      <div><b>Enemies:</b> ${enemies.length}${spawnQueue.length ? " (spawning)" : ""}</div>
      <div style="margin-top:6px;"><b>Tower cost:</b> ${towerCost}</div>
    `;
  }

  // ---- Drawing ----
  function draw(){
    // background
    ctx.clearRect(0,0,W,H);
    ctx.fillStyle = "#ffffff";
    ctx.fillRect(0,0,W,H);

    // light grid
    ctx.save();
    ctx.globalAlpha = 0.08;
    ctx.strokeStyle = "#000";
    ctx.lineWidth = 1;
    for (let x=0; x<=W; x+=grid){
      ctx.beginPath(); ctx.moveTo(x,0); ctx.lineTo(x,H); ctx.stroke();
    }
    for (let y=0; y<=H; y+=grid){
      ctx.beginPath(); ctx.moveTo(0,y); ctx.lineTo(W,y); ctx.stroke();
    }
    ctx.restore();

    // path
    ctx.save();
    ctx.lineCap = "round";
    ctx.lineJoin = "round";
    ctx.strokeStyle = "#c2a47a";
    ctx.lineWidth = pathWidth;
    ctx.beginPath();
    ctx.moveTo(path[0].x, path[0].y);
    for (let i=1;i<path.length;i++) ctx.lineTo(path[i].x, path[i].y);
    ctx.stroke();

    // path border
    ctx.strokeStyle = "#9b7b4f";
    ctx.lineWidth = pathWidth + 2;
    ctx.globalAlpha = 0.25;
    ctx.beginPath();
    ctx.moveTo(path[0].x, path[0].y);
    for (let i=1;i<path.length;i++) ctx.lineTo(path[i].x, path[i].y);
    ctx.stroke();
    ctx.restore();

    // start/end markers
    ctx.save();
    ctx.fillStyle = "#2f855a";
    ctx.beginPath(); ctx.arc(path[0].x, path[0].y, 10, 0, Math.PI*2); ctx.fill();
    ctx.fillStyle = "#c53030";
    const end = path[path.length-1];
    ctx.beginPath(); ctx.arc(end.x, end.y, 10, 0, Math.PI*2); ctx.fill();
    ctx.restore();

    // towers
    for (const t of towers){
      // base
      ctx.save();
      ctx.fillStyle = "#2d3748";
      ctx.beginPath(); ctx.arc(t.x, t.y, 14, 0, Math.PI*2); ctx.fill();
      // head
      ctx.fillStyle = "#4a5568";
      ctx.beginPath(); ctx.arc(t.x, t.y, 8, 0, Math.PI*2); ctx.fill();
      ctx.restore();

      // range ring (subtle)
      ctx.save();
      ctx.globalAlpha = 0.08;
      ctx.strokeStyle = "#000";
      ctx.lineWidth = 2;
      ctx.beginPath(); ctx.arc(t.x, t.y, t.range, 0, Math.PI*2); ctx.stroke();
      ctx.restore();
    }

    // enemies
    for (const e of enemies){
      ctx.save();
      // body
      ctx.fillStyle = "#111827";
      ctx.beginPath(); ctx.arc(e.x, e.y, e.r, 0, Math.PI*2); ctx.fill();

      // hp bar
      const bw = 34, bh = 6;
      const hpPct = clamp(e.hp / e.maxHp, 0, 1);
      ctx.fillStyle = "#e5e7eb";
      ctx.fillRect(e.x - bw/2, e.y - e.r - 14, bw, bh);
      ctx.fillStyle = "#16a34a";
      ctx.fillRect(e.x - bw/2, e.y - e.r - 14, bw*hpPct, bh);

      ctx.restore();
    }

    // bullets
    ctx.save();
    ctx.fillStyle = "#2563eb";
    for (const b of bullets){
      ctx.beginPath(); ctx.arc(b.x, b.y, 3.5, 0, Math.PI*2); ctx.fill();
    }
    ctx.restore();

    // HUD (small)
    ctx.save();
    ctx.fillStyle = "#111";
    ctx.globalAlpha = 0.65;
    ctx.font = "14px system-ui, -apple-system, Segoe UI, Roboto, Arial";
    ctx.fillText("Click to place towers (cost 50). Don’t place on the path.", 14, 22);
    ctx.restore();
  }

  // ---- Stop hook for notebook re-runs ----
  const controller = {
    stop: () => { running = false; }
  };
  window[RUN_KEY] = controller;

  // initial paint + loop
  draw();
  statusEl.textContent = "Ready";
  statsEl.textContent = "";
  requestAnimationFrame(step);
})();
</script>
'''))
